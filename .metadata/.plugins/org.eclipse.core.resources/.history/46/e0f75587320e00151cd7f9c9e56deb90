	align: 'center',
	top: '30%'
});

var enter = Ti.UI.createLabel({
	font: {fontSize: 24, fontFamily: "Helvetica"},
	text: "Enter",
	align: 'center',
	top: '55%'
});
	
mainInfoView.add(mainTitle, subTitle, enter);

enter.addEventListener("click", enterAbout);



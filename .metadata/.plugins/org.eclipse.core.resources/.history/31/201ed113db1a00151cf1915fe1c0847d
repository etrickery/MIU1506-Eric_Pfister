var loginPop = function(){
	var loginWindow = Ti.UI.createWindow({
		backgroundColor: 'transparent'
	});
	
	var backgroundView = Ti.UI.createView({
		width: screenWidth,
		height: screenHeight,
		backgroundColor: '#404041',
		bottom: 0,
		opacity: '0.5'
	});
	
	loginWindow.add(backgroundView);
	loginWindow.open();
};




exports.loginPop = loginPop;
